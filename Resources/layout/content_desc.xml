
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
           
          android:layout_marginTop= "0dp" 
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom = "10dp" 
          android:elevation="@dimen/abc_action_bar_content_inset_material"
          android:layout_width="match_parent"
          android:padding="@dimen/fastscroll_default_thickness"
          android:layout_height="match_parent">

         <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:orientation="vertical"
            android:background="@color/material_grey_100"
            android:layout_width="match_parent" 
            android:padding="@dimen/fastscroll_default_thickness"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance ="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:textStyle= "bold"
            android:fontFamily="@font/open_sans"
              />
            <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="@dimen/fastscroll_default_thickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totemDescript" 
            android:fontFamily="@font/open_sans"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle= "bold"
            android:textAppearance ="?android:attr/textAppearanceLarge"
            android:text="Praise"
            android:fontFamily="@font/open_sans"
             android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
           />
            <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fastscroll_default_thickness"
            android:id="@+id/totemBody"
            android:fontFamily="@font/open_sans"
             />
        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>